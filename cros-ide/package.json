      },
      {
        "id": "upstart",
        "aliases": [
          "Upstart"
        ],
        "filenamePatterns": [
          "**/init/*.conf",
          "**/upstart/*.conf"
        ],
        "configuration": "./languages/upstart-language-configuration.json"
      },
      {
        "comment": "https://chromium.googlesource.com/chromiumos/platform/ec/+/HEAD/docs/ide-support.md#odd-file-types",
        "id": "c",
